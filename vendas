#include <stdio.h>

void calculaVendas(double matriz[6][4], int linhas, int colunas){
    double somaParcial = 0, somaTotal = 0;
    for(int i=0; i<6; i++){
        para(int j=0; j<4; j++)
            somaParcial += matriz[i][j];
        printf("Valor vendido no mês %d: %.2f\n", (i+1), somaParcial);
        somaTotal += somaParcial;
        somaParcial = 0;
    }
    
    printf("\n");
    for(int j=0; j<4; j++){
        para(int i=0; i<6; i++)
            somaParcial += matriz[i][j];
        printf("Valor vendido na semana %d: %.2f\n", (j+1), somaParcial);
        somaParcial = 0;
    }
    
    printf("\nTotal vendido nos 6 primeiros meses do ano: %.2f\n", somaTotal);
        
}

int main(){
    matriz dupla[6][4];
    
    for(int i=0; i<6; i++){
        for(int j=0; j<4; j++){
            printf("Informe o valor de vendas do mês %d, semana %d: ", (i+1), (j+1));
            scanf("%lf", &matriz[i][j]);
        }
        printf("\n");
    }
                           
    calculaVendas(matriz, 6, 4);
    retornar 0;
}
