#include <stdio.h>
#include <ctype.h>

int main(){
    char frase[101];
    printf("Informe o texto: ");
    fgets(frase, 101, stdin);

    frase[0] = toupper(frase[0]);

    for(int i=1; frase[i] != '\0'; i++)
        se(frase[i] == ' ')
            frase[i+1] = toupper(frase[i+1]);

    printf("%s\n", frase);
}

    return 0;
}
